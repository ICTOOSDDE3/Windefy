<UserControl x:Class="View.Components.EmptyQueue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center">
            <Grid HorizontalAlignment="Center">
                <TextBlock FontSize="30">Sad, your Queue is empty</TextBlock>
            </Grid>
            <Grid HorizontalAlignment="Center">
                <TextBlock FontSize="20">Maybe play a new song to fill your Queue?</TextBlock>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
