<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1440">


    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="45.333" />
            <RowDefinition Height="44.667"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <WrapPanel Grid.ColumnSpan="2" Background="#4F83CC" Grid.RowSpan="3"/>

        <WrapPanel Grid.Row="0" Grid.Column="0" Background="#FFFF72">
            <Label Content="Windify" FontSize="35" Margin="10,30,0,0" />

            <ScrollViewer VerticalScrollBarVisibility="Auto">

                <WrapPanel  Background="Transparent" Margin="10,50,5,0" Height="749" >

                    <Label Content="Browse" FontSize="20" Height="54" Width="220"/>
                    <Label Content="Explore" FontSize="20" Height="54" Width="220" Margin="50,0,0,0"/>
                    <Label Content="Recommended" FontSize="20" Height="54" Width="220" Margin="50,0,0,0"/>
                    <Label Content="Favorites" FontSize="20" Height="54" Width="220"/>
                    <Label Content="Artists" FontSize="20" Height="54" Width="220" Margin="50,0,0,0"/>
                    <Label Content="Albums" FontSize="20" Height="54" Width="220" Margin="50,0,0,0"/>
                    <Label Content="Songs" FontSize="20" Height="54" Width="220" Margin="50,0,0,0"/>
                    <Label Content="Playlists" FontSize="20" Height="54" Width="320"/>
                    <Image Source="Assets/Images/mockSongImage.jpg" Height="30" Width="30" Margin="20,0,0,0"  />
                    <Label Content="Mood" FontSize="20" Height="54" Width="100" Margin="15,0,0,0"/>
                    <Image Source="Assets/Images/mockSongImage.jpg" Height="30" Width="30" Margin="20,0,0,0"  />
                    <Label Content="The best album" FontSize="20" Height="54" Width="100" Margin="15,0,0,0"/>
                    <Image Source="Assets/Images/mockSongImage.jpg" Height="30" Width="30" Margin="20,0,0,0"  />
                    <Label Content="Good songs for cool..." FontSize="20" Height="54" Width="100" Margin="15,0,0,0"/>
                </WrapPanel>
            </ScrollViewer>
        </WrapPanel>

        <WrapPanel Grid.Column="0" Background="Transparent" Height="96" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Margin="0,0,0,-6" Grid.RowSpan="3">
            <WrapPanel VerticalAlignment="Center" Height="80">
                <Image Source="Assets/Images/mockSongImage.jpg" Height="70" Width="70"/>
                <StackPanel Margin="5,0,0,0">
                    <Label Name="Track_Name" Content="{Binding Title}" Margin="0,20,0,0"/>
                    <ItemsControl x:Name="icArtistList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Grid Margin="0,0,0,5">
                                    <TextBlock Text="{Binding}" />
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    </ItemsControl>
                    
                </StackPanel>
                <ToggleButton x:Name="favoriteBtn" Content="Hart" Width="30" Height="30" Margin="50,0,0,0" />
            </WrapPanel>
            <WrapPanel VerticalAlignment="Center" >
                <ToggleButton x:Name="shuffleBtn" Content="Shuffle" Height="32" Width="32" Margin="49,0,0,0" />
                <Button x:Name="btnPrev" MouseDoubleClick="btnPrev_MouseDoubleClick" Click="btnPrev_Click" Content="Prev" Width="32" Height="24" Margin="60,0,0,0"/>
                <ToggleButton x:Name="tbPlayPause" Content = "Play" Checked = "TogglePlay" Unchecked = "TogglePause" Margin="60,0,0,0" Width="40" Height="40" />
                <Button x:Name="btnNext" Click="btnNext_Click" Width="32" Height="24" Content="Next" Margin="60,0,5,0"/>
                <ToggleButton x:Name="tbBtnRewind" Checked="btnRewind_Checked" Unchecked="btnRewind_Unchecked" Content="Rewind" Margin="60,0,5,0" Width="32" Height="32"/>
            </WrapPanel>
            <WrapPanel VerticalAlignment="Center">
                <Label Name="CurrentTime" Content="" Margin="100,0,0,0" VerticalAlignment="Center"/>
                <Slider Minimum="0" Maximum="100" Value="0" Name="TimeStatus" Thumb.DragStarted="TimeStatus_DragStarted" Thumb.DragCompleted="TimeStatus_DragCompleted" Margin="0,3,0,0" Width="300" Height="10" />
                <Label Name="TotalTime" Content="" Margin="0,0,0,0" />
            </WrapPanel>
            <WrapPanel VerticalAlignment="Center">
                <!--<Image Source="" Width="30" Height="30" Margin="5,0,0,0"/>-->
                <Slider Value="50" Maximum="100" ValueChanged="Volume_ValueChanged" Name="Volume" Width="142" Height="9" Margin="100,0,0,0" />
            </WrapPanel>
        </WrapPanel>

        <WrapPanel Grid.Row="0" Grid.Column="1" Background="White">
            <!--<TextBox Style="{StaticResource placeHolder}" Tag="Search for your next favorite thing" Width="490" Height="35" FontSize="18" Margin="30,30,0,0" />-->
        </WrapPanel>
    </Grid>
</Window>