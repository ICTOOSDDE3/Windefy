    <Resource Include="kruisje.png" />
    <Resource Include="loginbutton.png" />
    <Resource Include="Styles\Texts.xaml" />
    <Resource Include="Views\Like.png" />
    <Resource Include="Views\LikeEmpty.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Plus.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>